{
  "manifest_version": 3,
  "name": "CleanExit",
  "version": "1.0.0",
  "description": "Clear browsing data on browser reload.",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
      },
    "default_title": "CleanExit",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "assets/service_worker.js",
    "type": "module"
  },
  "permissions": ["browsingData", "storage"]
}